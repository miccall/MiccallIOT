<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="asynnet.com.asynnet.MainActivity">
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:src="@drawable/title"
        android:id="@+id/title" />
    <RelativeLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_parent">
            <RelativeLayout
                android:id="@+id/iv_1"
                android:onClick="bt_wendu"
                android:layout_margin="2dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/pic_bg"
                >
                <ImageView
                    android:id="@+id/iv_wendu"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/wendu"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:id="@+id/tv_wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度 23°"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:layout_below="@id/iv_wendu"
                />
                <TextView
                    android:id="@+id/tv_wendu_time"
                    android:layout_below="@+id/tv_wendu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="时间:10/01/21:07"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/iv_2"
                android:onClick="bt_yanwu"
                android:layout_margin="2dp"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/pic_bg"
                android:layout_below="@id/iv_1"
                >
                <ImageView
                    android:id="@+id/iv_yanwu"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/yanwu"/>
                <TextView
                    android:id="@+id/tv_yanwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="烟雾报警"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:layout_below="@id/iv_yanwu"
                    />
                <TextView
                    android:id="@+id/tv_yanwu_time"
                    android:layout_below="@+id/tv_yanwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="时间:10/01/21:07"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/pic_bg"
                android:id="@+id/iv_3"
                android:layout_margin="2dp"
                android:onClick="settingclick"
                android:layout_below="@+id/iv_1"
                android:layout_toEndOf="@+id/iv_1" >

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:onClick="bt_shidu"
                android:background="@drawable/pic_bg"
                android:id="@+id/iv_4"
                android:layout_margin="2dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_1" >
                <ImageView
                    android:id="@+id/iv_shidu"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bj_shidu"/>
                <TextView
                    android:id="@+id/tv_shidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湿度 73%"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:layout_below="@id/iv_shidu"
                    />
                <TextView
                    android:id="@+id/tv_shidu_time"
                    android:layout_below="@+id/tv_shidu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="时间:10/01/21:07"/>
            </RelativeLayout>
    </RelativeLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/stop"
    android:text=".........................."
    android:background="@null"
    android:layout_alignParentBottom="true"
    />

</RelativeLayout>
